{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}
